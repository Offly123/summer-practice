{
  "compilerOptions": {
    "noEmitOnError": true,
    "noImplicitAny": false, // Отключает проверку на неявный тип any
    "strictNullChecks": false, // Отключает проверку на null и undefined
    "strictFunctionTypes": false, // Отключает строгую проверку типов функций
    "strictBindCallApply": false, // Отключает строгую проверку для методов bind, call и apply
    "strictPropertyInitialization": false, // Отключает проверку инициализации свойств
    "noImplicitThis": false, // Отключает проверку неявного this
    "alwaysStrict": false, // Отключает строгий режим
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "",
    "paths": {
      "$/*": ["components/*"],
      "@/*": ["styles/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "sass.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
